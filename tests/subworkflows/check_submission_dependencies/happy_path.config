includeConfig '../../../nextflow.config'

manifest {
    name            = 'PCGL Dependency checker'
    author          = """Edmund"""
    homePage        = """https://github.com/Pan-Canadian-Genome-Library/molecular-data-submission-workflow"""
    description     = """Dependency checker prior to running workflow"""
    mainScript      = 'main.nf'
    nextflowVersion = '!>=22.10.1'
    version         = '1.0dev'
    doi             = ''
}

params {

    outdir = "output"
    publish_dir_mode = "copy"

    file_metadata = "${launchDir}/test_data/modules/checkclinical/happy_path/Files.tsv"
    analysis_metadata = "${launchDir}test_data/modules/checkclinical/happy_path/Analysis.tsv"
    experiment_metadata = "${launchDir}/test_data/modules/checkclinical/happy_path/Experiment.tsv"
    sample_metadata = "${launchDir}/test_data/modules/checkclinical/happy_path/Sample.tsv"
    specimen_metadata = "${launchDir}/test_data/modules/checkclinical/happy_path/Specimen.tsv"
    read_group_metadata = "${launchDir}/test_data/modules/checkclinical/happy_path/Read_Group.tsv"
    workflow_metadata = "${launchDir}/test_data/modules/checkclinical/happy_path/Workflow.tsv"
    clinical_url = "https://submission.pcgl-dev.cumulus.genomeinformatics.org"
    file_manager_url = "https://file-manager.pcgl-dev.cumulus.genomeinformatics.org"
    token = "NNNN-NNNN-NNNN-NNNN"
    study_id = "EXAMPLE-CA"
    data_directory = "${launchDir}/test_data/modules/checkclinical/happy_path"

}